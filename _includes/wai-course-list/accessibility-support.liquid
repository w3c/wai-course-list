{% for support in site.data.wai-course-list.accessibility-support %}

<fieldset>
<legend class="fieldset-subtitles" id="{{support.id}}-subtitles" >{{ support.type }}</legend>
{% for option in support.options %}
{% if option.options %}
<fieldset>
<legend class="expl" id="{{option.id}}-expl">{{ option.name }}, {{strings.asupport_including}}: </legend>
{% for details in option.options %}
<div class="radio-field">  
    <input type="checkbox" id="{{ details.id }}" name="accessibility_support[]" value="{{ details.id }}" group="accessibility_support" aria-describedby="{{support.id}}-subtitles {{option.id}}-expl">
    <label for="{{ details.id }}">{{ details.name }}</label>
</div>
{% endfor %}
</fieldset>
{% else %}
<div class="radio-field">
    <input type="checkbox" id="{{ option.id }}" name="accessibility_support[]" value="{{ option.id }}" group="accessibility_support" aria-describedby="{{support.id}}-subtitles {{option.id}}-expl">
    <label for="{{ option.id }}">{{ option.name }}</label>
</div>    
{% endif %}
{% endfor %}
</fieldset>
{% endfor %}

<div class="field">
    <label for="accessibility_support_other">{{strings.asupport_other}}</label>
    <textarea id="accessibility_support_other" name="accessibility_support_other"></textarea>
</div>